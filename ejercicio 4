def tareas_ordenar (tareas, orden):
    """
    esta función 
    colas= almacena datos (usamos las propiedades de las listas)
    """
    tareas = ['tarea A', 'tarea B', 'tarea C','Tarea D']
    orden_prioridad= [5,3,2,1,4]
#asignamos tarea a prioridad y vemos si la lista esta vacia 
    cola_tareas = []
    lista_emparejada = list(zip(tareas,orden))
    for t, p in cola_tareas:
        if not cola_tareas:
            lista_emparejada.append ((tarea, prioridad))
            prioridad_anterior =prioridad
        else:
            if prioridad < prioridad_anterior:
                lista_emparejada.append((tarea, prioridad))
                prioridad_anterior =prioridad 

    return cola_tareas 


print(lista_emparejada)

