def separar (lista): 
    """
    Esta FunciÃ³n muestra los nÃºmeros pares e impares 
    """
    pares =[]
    impares = []
    for numero in lista:
        if (numero % 2) == 0:
            pares.append (numero)
        else:
            impares.append (numero)
    pares.sort()
    impares.sort()
    return pares, impares
lista = [6,5,2,1,7]
pares, impares =separar(lista)

print(pares)
print(impares)
